:host
  typography-basics()

  .image-uploader
    align-items: center
    border: 2px dashed $grey-10
    color: $grey-40
    display: flex
    flex-direction: column
    height: 200px
    width: 200px

    .can-upload
      align-items: center
      display: flex
      flex-direction: column

    .photo-icon
      color: $grey-40
      font-size: 32px
      height: 32px
      margin-bottom: 8px
      margin-top: 46px
      width: 32px

    .drag-text
      font-size: 13px
      margin-bottom: 8px

    .or-text
      font-size: 12px
      margin-bottom: 8px

    .upload-btn-wrapper
      margin-bottom: 8px
      position: relative
      width: 148px

      .button
        background-color: $grey-15
        border: none
        color: $white
        font-size: 9px
        height: 24px
        padding: 7px 0
        text-transform: uppercase
        width: 100%

      input[type=file]
        cursor: pointer
        height: 24px
        left: 0
        opacity: 0
        position: absolute
        width: 100%

    .is-small
      font-size: 10px

    .uploaded
      margin: auto

    .is-hidden
      display: none

    .upload-img
      display: block
      height: auto
      max-height: 140px
      max-width: 140px
      width: auto

  .file-list
    align-items: center
    color: $grey-80
    display: flex
    font-size: 14px
    margin-top: 16px

    i
      color: $grey-60
      cursor: pointer
      margin-right: 8px

  .is-invisible
    visibility: hidden

  .preview-image
    align-items: center
    border: 2px dashed $grey-10
    display: flex
    flex-direction: column
    height: 160px
    justify-content: center
    max-height: 160px
    max-width: 160px
    padding: 20px
    width: 160px

    img
      display: block
      height: auto
      max-width: 134px
      width: auto
