@require '../../styles/layout/flex-container.styl'
@require '../../styles/layout/container.styl'

.sa-toolbar
  background: $grey-80
  border-bottom: 4px solid $orange
  box-shadow: 0 2px 5px 0 rgba(210, 210, 210, 0.5)
  color: $white
  font-family: $family-sans-serif
  height: 64px
  left: 0
  position: absolute
  right: 0
  text-decoration: none
  top: 0
  width: 100%

  .sa-toolbar-container
    box-sizing: border-box
    height: 65px
    margin: 0 auto
    max-width: $desktop
    padding: 0 $padding-24
    width: $desktop

  .sa-toolbar-left
    width: 1156px
