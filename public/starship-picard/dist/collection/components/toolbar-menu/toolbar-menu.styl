@require '../../styles/material/mdc.list.styl'
@require '../../styles/material/mdc.menu.styl'

:host
  a
    color: $grey-40
    display: flex
    margin-left: 16px
    text-decoration: none

    &:hover
      color: $white

    &.active
      color: $white

  .mdc-menu
    min-width: 85px

    .mdc-list
      background-color: $white
      padding: 0

      .mdc-list-item
        background-color: $white
        color: $grey-60
        font-size: 12px
        height: 29px
        line-height: 0
        padding-left: 8px

  .mdc-menu-anchor
    right: 200%
    top: 20px
