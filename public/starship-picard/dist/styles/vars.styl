// Primary Colors
$blue              = #00b2e2
$teal              = #36c8b5
$red               = #ef5b4b
$orange            = #f26c32
$orange-light      = #fe9646
$orange-lighter    = #f3bba3
$yellow            = #ffcb2b
$green             = #49c57e

// Darks
$dark-blue         = #007797
$dark-teal         = #289375
$dark-red          = #af4337
$dark-orange       = #b14f25
$dark-yellow       = #bb9320
$dark-green        = #36905c

// Greys
$black             = #000000
$grey-80           = #333333
$grey-70           = #545454
$grey-65           = #585858
$grey-60           = #666666
$grey-40           = #999999
$grey-15           = #d8d8d8
$grey-10           = #e5e5e5
$grey-5            = #f2f2f2
$grey-2            = #f9f9f9
$white             = #ffffff

// Mains
$primary           = $teal
$primary-dark      = $dark-teal
$secondary         = $orange
$secondary-dark    = $dark-orange
$tertiary          = $grey-40
$tertiary-dark     = $grey-80

// Typography
$family-sans-serif = 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
$size-24          ?= 1.5rem
$size-22          ?= 1.375rem
$size-18          ?= 1.125rem
$size-14          ?= 0.875rem
$size-12          ?= 0.75rem
$size-11          ?= 0.6875rem
$size-10          ?= 0.675rem
$body-line-height ?= 1.65
$weight-light     ?= 300
$weight-normal    ?= 400
$weight-medium    ?= 500
$weight-semibold  ?= 600
$weight-bold      ?= 700

// Sizing
$desktop           = 1440px
$gap               = 72px

// Padding
$padding-24       ?= 1.5rem
$padding-32       ?= 2rem
$padding-40       ?= 2.5rem
$padding-16       ?= 1rem
$padding-8        ?= 0.5rem
$padding-4        ?= 0.25rem

.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;  /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;

  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;

  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;

  /* Support for IE. */
  font-feature-settings: 'liga';
}
