// flex-container for creating vertically aligned content
.flex-container
  align-items: center
  justify-content: space-between
  display: flex

  img
    display: inline-block
    vertical-align: top

  .flex-item
    align-items: center
    display: flex
    flex-basis: auto
    flex-grow: 0
    flex-shrink: 0
    justify-content: center

    .title, .subtitle
      margin-bottom: 0

  .flex-left, .flex-right
    flex-basis: auto
    flex-grow: 0
    flex-shrink: 0

    .flex-item
      &.is-flexible
        flex-grow: 1

  .flex-left
    align-items: center
    justify-content: flex-start
    display: flex

  .flex-right
    align-items: center
    justify-content: flex-end
    display: flex
